---
import Fuse from 'fuse.js';

const metadata = await import('../content/_metadata.json');
const pages = metadata.default.pages;
// This will be populated with search data
---

<div id="search-container" class="max-w-2xl mx-auto">
  <div class="relative">
    <input
      id="search-input"
      type="text"
      placeholder="Search your knowledge..."
      class="w-full px-4 py-3 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white"
    />
    <svg class="absolute left-3 top-3.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
  </div>

  <div id="search-results" class="mt-4 space-y-4 hidden">
    <!-- Results will be populated by JavaScript -->
  </div>
</div>

<script>
  import Fuse from 'fuse.js';

  // Get pages data from a global variable or fetch it
  const getPagesData = async () => {
    try {
      const response = await fetch('/_metadata.json');
      const data = await response.json();
      return data.pages;
    } catch (error) {
      console.error('Error loading pages data:', error);
      return [];
    }
  };

  let fuse = null;

  const initSearch = async () => {
    const pages = await getPagesData();
    fuse = new Fuse(pages, {
      keys: ['title', 'excerpt'],
      threshold: 0.3
    });
  };

  // Initialize search when DOM is ready
  document.addEventListener('DOMContentLoaded', initSearch);

  const searchInput = document.getElementById('search-input');
  const searchResults = document.getElementById('search-results');

  searchInput?.addEventListener('input', (e) => {
    const query = e.target.value.trim();

    if (!fuse) {
      console.log('Search not initialized yet');
      return;
    }

    if (query.length < 2) {
      searchResults.classList.add('hidden');
      return;
    }

    const results = fuse.search(query).slice(0, 10);

    if (results.length === 0) {
      searchResults.innerHTML = '<p class="text-gray-500">No results found</p>';
    } else {
      searchResults.innerHTML = results.map(result => `
        <div class="border rounded-lg p-4 hover:shadow-md">
          <h3 class="font-semibold">
            <a href="/pages/${result.item.slug}" class="hover:text-blue-600">
              ${result.item.title}
            </a>
          </h3>
          <p class="text-gray-600 text-sm mt-1">${result.item.excerpt}</p>
        </div>
      `).join('');
    }

    searchResults.classList.remove('hidden');
  });
</script>
